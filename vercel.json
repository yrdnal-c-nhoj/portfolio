{
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri"
  },
  "installCommand": "cd client && npm install && cd ../api && npm install"
}
